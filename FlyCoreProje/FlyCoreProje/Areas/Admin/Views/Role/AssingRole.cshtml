@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>
<form method="post">
    @for(int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExits" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].RoleExits">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-outline-primary">Değişiklikliği Kaydet</button>
</form>
